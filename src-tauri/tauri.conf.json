{
  "$schema": "./config-schema.json",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "bundle": {
    "active": true,
    "copyright": "GPLv3",
    "targets": "all",
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "longDescription": "Latex and ocr software powered by MixTex-rs and Tauri",
    "shortDescription": "MixTex-rs GUI App",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "deb": {
        "depends": [
          "libxdo-dev",
          "libxcb1",
          "libxrandr2"
        ]
      }
    }
  },
  "productName": "mixtex-rs-gui",
  "mainBinaryName": "mixtex-rs-gui",
  "version": "0.5.0",
  "identifier": "com.mosrat.mixtex-rs-gui",
  "plugins": {},
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "MixTex",
        "label": "main",
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": false,
        "resizable": false,
        "width": 800,
        "height": 600,
        "url": "editor.html",
        "shadow": true,
        "focus": true,
        "windowEffects": {
          "effects": [
            "tabbedLight",
            "acrylic"
          ]
        },
        "center": true
      }
    ],
    "security": {
      "assetProtocol": {
        "scope": [
          "$CACHE/**",
          "$CONFIG/**"
        ],
        "enable": true
      },
      "devCsp": "default-src * data: ; img-src * 'self' asset: https: data: ; style-src * 'unsafe-inline'; worker-src 'self' blob: ; script-src * 'unsafe-eval';",
      "csp": "default-src * data: ; img-src * 'self' asset: https: data: ; style-src * 'unsafe-inline'; worker-src 'self' blob: ; script-src * 'unsafe-eval';; connect-src ipc: http://ipc.localhost"
    }
  }
}