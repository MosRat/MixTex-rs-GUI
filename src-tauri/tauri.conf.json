{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "mixtex-rs-gui",
    "version": "0.1.1"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "globalShortcut": {
        "all": true
      },
      "shell": {
        "all": false,
        "open": true
      },
      "app": {
        "all": true
      },
       "protocol":
       {
          "asset": true,
          "assetScope": [
              "$CACHE/**",
              "$CONFIG/**"
          ]
      }
    },
    "windows": [
      {
        "title": "Daemon",
        "label": "daemon",
        "visible": false,
        "url": "daemon.html"
      },
      {
        "title": "mixtex-rs-gui",
        "label": "main",
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": false,
        "width": 800,
        "height": 600,
        "url": "index.html"
      }
    ],
    "security": {
      "csp": "default-src * data: ; img-src * 'self' asset: https: data: ; style-src * 'unsafe-inline'; worker-src 'self' blob: ; script-src * 'unsafe-eval';",
      "devCsp": "default-src * data: ; img-src * 'self' asset: https: data: ; style-src * 'unsafe-inline'; worker-src 'self' blob: ; script-src * 'unsafe-eval';"
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.mosrat.mixtex-rs-gui",
      "longDescription": "Latex and ocr software powered by MixTex-rs and Tauri",
      "shortDescription": "MixTex-rs GUI App",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  }
}
