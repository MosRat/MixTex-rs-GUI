{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Path Alias */
    "paths": {
      "@/*": [
        "./src/*"
      ],
      // 这里需要配置
      "@cp/*": [
        "./src/components/*"
      ],
      // 这里需要配置
      "@view/*": [
        "./src/views/*"
      ],
      // 这里需要配置
      "@lib/*": [
        "./src/libs/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/complete.ts.d.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
